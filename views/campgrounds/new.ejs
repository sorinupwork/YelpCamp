<%- include("../partials/header") %>

  <div class="row">
    <h1 style="text-align: center;">Create a new campground</h1>
    <div style="width: 30%; margin: 25px auto;">
      <form class="" action="/campgrounds" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Campground's Name:</label>
          <input id="name" class="form-control" type="text" name="campground[name]" value="" placeholder="name" required>
        </div>
        <div class="form-group">
          <label for="price">Campground's Price:</label>
          <input id="price" class="form-control" type="number" name="campground[price]" placeholder="price" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <label for="image">Campground's Image:</label>
          <input id="image" type="file" name="image" accept="image/*" required>
        </div>
        <div class="form-group">
          <label for="desc">Campground's Description:</label>
          <input id="desc" class="form-control" type="text" name="campground[description]" value="" placeholder="description">
        </div>
        <div class="form-group">
          <button class="btn btn-md btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>

<%- include("../partials/footer") %>
