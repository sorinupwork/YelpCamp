<%- include("../partials/header") %>

  <div class="row">
    <h1 style="text-align: center;">Edit <%= campground.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
      <form class="" action="/campgrounds/<%= campground.id %>?_method=put" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Campground's Name:</label>
          <input id="name" class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <label for="price">Campground's Price:</label>
          <input id="price" class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <label for="image">Campground's Image:</label>
          <input id="image" type="file" name="image" accept="image/*">
        </div>
        <div class="form-group">
          <label for="desc">Campground's Description:</label>
          <input id="desc" class="form-control" type="text" name="campground[description]" value="<%= campground.description %>">
        </div>
        <div class="form-group">
          <button class="btn btn-md btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>

<%- include("../partials/footer") %>
