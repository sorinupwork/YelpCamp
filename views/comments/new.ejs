<%- include("../partials/header") %>

  <div class="row">
    <h1 style="text-align: center;">Add New Comment to <%= campground.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
      <form class="" action="/campgrounds/<%= campground.id %>/comments" method="post">
        <div class="form-group">
          <label for="comm">Leave a comment:</label>
          <input id="comm" class="form-control" type="text" name="comment[text]" value="" placeholder="text">
        </div>
        <div class="form-group">
          <button class="btn btn-md btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>

<%- include("../partials/footer") %>
