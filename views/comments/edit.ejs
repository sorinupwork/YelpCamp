<%- include("../partials/header") %>

  <div class="row">
    <h1 style="text-align: center;">Edit Comment</h1>
    <div style="width: 30%; margin: 25px auto;">
      <form class="" action="/campgrounds/<%= campground_id %>/comments/<%= comment.id %>?_method=put" method="post">
        <div class="form-group">
          <label for="comm">Edit the comment:</label>
          <input id="comm" class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
        </div>
        <div class="form-group">
          <button class="btn btn-md btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>

<%- include("../partials/footer") %>
